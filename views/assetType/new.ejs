<form id="regForm" action="/assetType" method = "post">

    <h1>Register Asset Type:</h1>
    
    <!-- One "tab" for each step in the form: -->
    <div class="tab">Name:
      <p><input placeholder="Asset Type Serial No..." oninput="this.className = ''" name = "assetTypeNumber" id="serialInpt" value="AST-<%=locals.serialNo%>" readonly></p>
      <p><input placeholder="Asset Type..." oninput = "checkSelectOptions(this.value)" oninput="this.className = ''" id = "selAsset" name = "assetTypeName" value="<%=assetType.assetType%>"></p>
      <p><input  type = 'file' placeholder = 'Asset Type Pic' name = 'assetTypePic' class="filepond"></p>
      <p><select onchange = "SetAssetValue(this)" id = "inputAssetType">
        <% assetTypesArr.forEach(assetTypesArrItem =>{ %>
          
          <option><%=assetTypesArrItem %></option>
          
          <%  })%>
        </select></p>
       
    </div>
    
    <div class="tab">Manufacturer Info:
      <p><input placeholder="Name..." oninput="this.className = ''" name = "assetTypeManufacturerName" value=""></p>
      <p><select placeholder="Name..." oninput="this.className = ''" name = "assetTypeManufacturerNameSel" value=""></select></p>
      <p><input placeholder="Address..." oninput="this.className = ''" name = "assetTypeManufacturerAddress" value="<%=assetType.phone%>"></p>
      <p><input placeholder="Phone..." oninput="this.className = ''" name = "assetTypeManufacturerPhone" value="<%=assetType.phone%>"></p>
      <p><input placeholder="E-mail..." oninput="this.className = ''" name = "assetTypeManufacturerEmail" value="<%=assetType.email%>"></p>
    </div>
    
    <div class="tab">Birthday:
      <p><input placeholder="Qty..." oninput="this.className = ''" name = "assetTypeQty" id="assetTypeQty" value="<%=assetType.assetCode%>"></p>
      <p><input type="Number" placeholder="Asset Value..." oninput="this.className = ''" name = "assetTypeValue" id="assetTypeValue" value="<%=assetType.assetCode%>"></p>
      <p><input placeholder="Life Cycle (yrs)..." oninput="this.className = ''" type = 'number' name = "assetTypeLifeCycle" id="assetTypeLifeCycle" value="<%=assetType.assetCode%>"></p>
      <p><input placeholder="Asset Purchased..." oninput="this.className = ''" type = 'date' name = "assetTypePurchased" id="assetTypePurchased" value="<%=assetType.assetCode%>"></p>
    </div>
    
    <div class="tab">Login Info:
      <p><textarea name =  "assetTypeDescription" id = "assetTypeDescription"> </textarea></p>
      <p><select placeholder="Asset Status" oninput="this.className = ''" name = "assetTypeStatus">
      <option>New</option>
      <option>Old</option>
      <option>Used</option>
      <option>Damaged</option>
      </select></p>
      <span>Trackable: </span>
      <p>
        Yes:<input type="radio" name="assetTypeTrackable" value = "true" />
        No:<input type="radio" name="assetTypeTrackable" value = "false" />
      </p>
      <p><select placeholder="Store Location..." name = 'assetTypeStoreLocation' id="assetTypeStoreLocation">
        <option>Abuja</option>
        <option>Lagos</option>
      </select></p>
    </div>
    
    <div style="overflow:auto;">
      <div style = "float:left;">
        <a href = "./new" id="cancelBtn">Cancel</a>
      </div>
      <div style="float:right;">
        <button type="button" id="prevBtn" onclick="nextPrev(-1)">Previous</button>
        <button type="button" id="nextBtn" onclick="nextPrev(1)">Next</button>
      </div>
    </div>
    
    <!-- Circles which indicates the steps of the form: -->
    <div style="text-align:center;margin-top:40px;">
      <span class="step"></span>
      <span class="step"></span>
      <span class="step"></span>
      <span class="step"></span>
    </div>
    
    </form>
