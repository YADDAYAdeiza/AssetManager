<form  method = "post" id="regForm" action="/assetType/<%=assetType.id%>?_method=PUT">

  <h1>Register Asset Type:</h1>
  
  <!-- One "tab" for each step in the form: -->
  <div class="tab">Name:
    <p><input placeholder="Asset Type Serial No..." oninput="this.className = ''" name = "assetTypeNumber" id="serialInpt" value="<%=assetType.assetTypeCode%>" readonly></p>
    <p><input placeholder="Asset Type..." oninput = "checkSelectOptions(this.value)" oninput="this.className = ''" id = "selAsset" name = "assetTypeName" value="<%=assetType.assetTypeClass%>"></p>
    <p><input  type = 'file' placeholder = 'Asset Type Pic' name = 'assetTypePic'></p>
    <p><select onchange = "SetAssetValue(this)" id = "inputAssetType" value="<%=assetType.assetTypeClass%>">
      <%if (locals.assetTypeArr){%>
        <% assetTypeArr.forEach(assetTypeArrItem =>{ %>
          
          <%if(assetTypeArrItem == assetType.assetTypeClass){%>
            <option selected><%=assetTypeArrItem %></option>
            <%}else {%>
            <option><%=assetTypeArrItem %></option>
            <%}%>
          
          <%  })%>

      <%}%>
      </select></p>
     
  </div>
  
  <div class="tab">Manufacturer Info:
    <p><input placeholder="Name..." oninput="this.className = ''" name = "assetTypeManufacturerName" value="<%=assetType.assetManufacturer%>"></p>
    <p><select placeholder="Name..." oninput="this.className = ''" name = "assetTypeManufacturerNameSel" value=""></select></p>
    <p><input placeholder="Address..." oninput="this.className = ''" name = "assetTypeManufacturerAddress" value="<%=assetType.assetStoreLocation%>"></p>
    <p><input placeholder="Phone..." oninput="this.className = ''" name = "assetTypeManufacturerPhone" value="<%=assetType.phone%>"></p>
    <p><input placeholder="E-mail..." oninput="this.className = ''" name = "assetTypeManufacturerEmail" value="<%=assetType.email%>"></p>
  </div>
  
  <div class="tab">Birthday:
    <p><input placeholder="Qty..." oninput="this.className = ''" name = "assetTypeQty" id="assetTypeQty" value="<%=assetType.assetCode%>"></p>
    <p><input placeholder="Asset Value..." oninput="this.className = ''" name = "assetTypeValue" id="assetTypeValue" value="<%=assetType.assetValue%>"></p>
    <p><input placeholder="Life Cycle (yrs)..." oninput="this.className = ''" type = 'number' name = "assetTypeLifeCycle" id="assetTypeLifeCycle" value="<%=assetType.assetLifeCycle%>"></p>
        <p><input placeholder="Asset Purchased..." oninput="this.className = ''" type = 'date' name = "assetTypePurchased" id="assetTypePurchased" value="<%=assetType.assetTypePurchased.toISOString().split('T')[0]%>"></p>
  </div>
  
  <div class="tab">Login Info:
    <p><textarea name =  "assetTypeDescription" id = "assetTypeDescription"><%=assetType.assetDescription%></textarea></p>
    <p><select placeholder="Asset Status" oninput="this.className = ''" name = "assetTypeStatus" value = "<%=assetType.status%>">
    <option>New</option>
    <option>Old</option>
    <option>Used</option>
    <option>Damaged</option>
    </select></p>
    <p><select placeholder="Store Location..." name = 'assetTypeStoreLocation' id="assetTypeStoreLocation">
      <option>Abuja</option>
      <option>Lagos</option>
    </select></p>
  </div>
  
  <div style="overflow:auto;">
    <div style = "float:left;">
      <a href = "./new" id="cancelBtn">Cancel</a>
    </div>
    <div style="float:right;">
      <button type="button" id="prevBtn" onclick="nextPrev(-1)">Previous</button>
      <button type="button" id="nextBtn" onclick="nextPrev(1)">Next</button>
    </div>
  </div>
  
  <!-- Circles which indicates the steps of the form: -->
  <div style="text-align:center;margin-top:40px;">
    <span class="step"></span>
    <span class="step"></span>
    <span class="step"></span>
    <span class="step"></span>
  </div>
  
  </form>

  <script>
    console.log('Asset edit script');
    let assetTypeImageName = '<%- assetType.assetTypeImageName %>';
    // console.log('This is assetTypeImageName ', assetTypeImageName);
  </script>
