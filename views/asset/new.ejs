<form id="regForm" action="/asset" method = "post">

    <h1>Register Asset:</h1>

    
    <!-- One "tab" for each step in the form: -->
    <!-- assetType.assetCode -->
    <div class="tab">Name:
      <p><input placeholder="Asset Type Serial No..." oninput="this.className = ''" name = "assetNumber" id="serialInpt" value="AS-<%=locals.serialNumber%>" readonly></p>
      <p><select  onchange = "SetAssetValue(this)" id = "selAsset" name="selAssetType">
        <% assetType.forEach(assetTypeItem =>{ %>
          <option label = "<%= assetTypeItem.assetTypeClass %>" value =<%=assetTypeItem._id%> ></option>
        <% }) %>
      </select></p>
      <p><input type="file" name="assetPic" class = "asset-pic filepond"></p>
    </div>
    >
    <div class="tab">Contact Info:
      <p><input placeholder="E-mail..." oninput="this.className = ''" name = "assetEmail" value="<%=asset.email%>"></p>
      <p><input placeholder="Phone..." oninput="this.className = ''" name = "assetphone" value="<%=asset.phone%>"></p>
    </div>
    <!-- onchange = "GetSerialNumber(this.value)" -->
    <div class="tab">Birthday:
      <p><input placeholder="dd" oninput="this.className = ''" name = "assetDay"></p>
      <p><input placeholder="mm" oninput="this.className = ''" name = "assetMonth"></p>
      <p><input placeholder="yyyy" oninput="this.className = ''" name = "assetYear"></p>
    </div>
    
    <div class="tab">Login Info:
      <p><input placeholder="Username..." oninput="this.className = ''" name = "assetUsername"></p>
      <p><input placeholder="Password..." oninput="this.className = ''" name = "assetPassword"></p>
    </div>
    
    <div style="overflow:auto;">
      <div style = "float:left;">
        <a href = "./asset" id="cancelBtn">Cancel</a>
      </div>
      <div style="float:right;">
        <button type="button" id="prevBtn" onclick="nextPrev(-1)">Previous</button>
        <button type="button" id="nextBtn" onclick="nextPrev(1)">Next</button>
      </div>
    </div>
    
    <!-- Circles which indicates the steps of the form: -->
    <div style="text-align:center;margin-top:40px;">
      <span class="step"></span>
      <span class="step"></span>
      <span class="step"></span>
      <span class="step"></span>
    </div>
    
    </form>